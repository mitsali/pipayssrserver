{
  "version": 3,
  "builds": [
    {
      "src": "src/server.js",  // Your custom server entry
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**", "public/**"]  // Include built assets
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/dist/client/$1"  // Serve static files
    },
    {
      "src": "/(.*)",
      "dest": "src/server.js"    // All routes â†’ custom server
    }
  ]
}
