{
  "version": 3,
  "builds": [
    {
      "src": "src/server.js",  
      "use": "@vercel/node",   
      "config": {
        "includeFiles": [
          "dist/**",     
          "public/**"    
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",  
      "dest": "/dist/client/$1"
    },
    {
      "src": "/(.*)",         // All other routes â†’ Node server
      "dest": "src/server.js"
    }
  ]
}
