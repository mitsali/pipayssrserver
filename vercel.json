{
  "version": 3,
  "builds": [
    {
      "src": "src/server.js",  // Your custom server entry
      "use": "@vercel/node",   // Uses Node.js runtime
      "config": {
        "includeFiles": [
          "dist/**",     // Include built assets (if applicable)
          "public/**"    // Static files (if applicable)
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",  // Serve static files
      "dest": "/dist/client/$1"
    },
    {
      "src": "/(.*)",         // All other routes â†’ Node server
      "dest": "src/server.js"
    }
  ]
}
